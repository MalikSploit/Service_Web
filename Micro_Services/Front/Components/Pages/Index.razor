@page "/"

<div class="bg-gradient-to-br from-gray-100 to-gray-200 min-h-screen">
    <nav class="bg-white shadow-lg">
        <div class="max-w-6xl mx-auto px-4">
            <div class="flex justify-between">
                <div>
                    <!-- Logo du site web -->
                    <a href="/" class="flex items-center py-4 px-2">
                        <img src="Images/Logo.svg" alt="IzziBooks Logo" class="h-8 mr-2"/>
                    </a>
                </div>
                
                <!-- Les éléments de navigation -->
                <div class="hidden md:flex items-center space-x-1 ml-auto">
                   
                    <!-- Cart Icon -->
                    <a href="/Cart" class="py-4 px-2 flex items-center text-gray-500 font-semibold hover:text-green-500 transition duration-300">
                        <span class="material-icons align-middle mr-2">shopping_cart</span>
                        Cart
                    </a>

                    @if (_isLoggedIn)
                    {
                        <div class="flex items-center">
                            <!-- Profile Icon -->
                            <a href="/Profile" class="py-4 px-2 flex items-center text-gray-500 font-semibold hover:text-green-500 transition duration-300">
                                @*<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2 align-middle" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M 12 14 C 14.5 14 16.5 12 16.5 9.5 S 14.5 5 12 5 S 7.5 7 7.5 9.5 S 9.5 14 12 14 Z M 12 16 C 9.67 16 5 17.17 5 19.5 V 21 H 19 V 19.5 C 19 17.17 14.33 16 12 16 Z"/>
                                </svg>*@
                                <span class="material-icons align-middle mr-2">account_circle</span>
                                Profile
                            </a>

                            <!-- Logout Button -->
                            <button @onclick="Logout" class="py-4 px-2 text-gray-500 font-semibold hover:text-green-500 transition duration-300 flex items-center">
                                <span class="material-icons align-middle mr-2">exit_to_app</span>
                                Logout
                            </button>
                        </div>
                    }
                    else
                    {
                        <a href="/Signup" class="py-4 px-2 text-gray-500 font-semibold hover:text-green-500 transition duration-300">Signup</a>
                        <a href="/Login" class="py-4 px-2 text-gray-500 font-semibold hover:text-green-500 transition duration-300">Login</a>
                    }
                </div>
                
                <!-- Menu pour téléphone -->
                <div class="md:hidden flex items-center">
                    <button @onclick="ToggleDropdown" class="outline-none mobile-menu-button">
                        <svg class="w-6 h-6 text-gray-500 hover:text-green-500" fill="none" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" stroke="currentColor">
                            <path d="M4 6h16M4 12h16M4 18h16"></path>
                        </svg>
                    </button>
                </div>
            </div>
        </div>
        
        <!-- Menu pour téléphone -->
        <div class="@GetDropdownClass()">
            <ul>
                <li>
                    <!-- Cart Icon -->
                    <a href="/Cart" class="text-sm px-2 py-4 hover:bg-green-500 transition duration-300 flex items-center text-gray-500 font-semibold">
                        <span class="material-icons align-middle mr-2">shopping_cart</span>
                        Cart
                    </a>
                </li>
                @if (_isLoggedIn)
                {
                    <li>
                        <a href="/Profile" class="text-sm px-2 py-4 hover:bg-green-500 transition duration-300 flex items-center text-gray-500 font-semibold">
                            @*<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 align-middle" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 11c2.5 0 4.5-2 4.5-4.5S14.5 2 12 2 7.5 4 7.5 6.5 9.5 11 12 11zm0 2c-2.33 0-7 1.17-7 3.5V18h14v-1.5c0-2.33-4.67-3.5-7-3.5z"/>
                            </svg>*@
                            <span class="material-icons align-middle mr-2">account_circle</span>
                            Profile
                        </a>
                    </li>
                    <li>
                        <button @onclick="Logout" class="text-sm px-2 py-4 hover:bg-green-500 transition duration-300 w-full text-left text-gray-500 font-semibold">
                            <span class="material-icons align-middle mr-2">exit_to_app</span>
                            Logout
                        </button>
                    </li>
                }
                else
                {
                    <li><a href="Signup" class="text-sm px-2 py-4 hover:bg-green-500 transition duration-300 text-gray-500 font-semibold">Signup</a></li>
                    <li><a href="Login" class="text-sm px-2 py-4 hover:bg-green-500 transition duration-300 text-gray-500 font-semibold">Login</a></li>
                }
            </ul>
        </div>
    </nav>
    
    <!-- Hero Section -->
    <div class="text-center p-16 bg-gradient-to-r from-blue-800 to-purple-600 text-white">
        <h1 class="text-6xl font-bold mb-4 outline-none">Find Your Next Read</h1>
        <p class="text-xl mb-8">Dive into our diverse collection of books and genres.</p>
        <a href="/Explore" class="inline-block bg-pink-500 hover:bg-pink-600 text-white py-3 px-6 rounded-lg text-lg font-medium transition duration-300 ease-in-out transform hover:-translate-y-1">Explore Books</a>
    </div>
    
    <!-- Books Section -->
    <section class="py-12">
        <div class="container mx-auto px-4">
            <h2 class="text-4xl font-semibold text-center text-gray-800 mb-12">Featured Books</h2>
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
                
                @foreach (var book in books)
                {
                    <!-- Book Template -->
                    <div class="bg-white rounded-lg overflow-hidden shadow-lg hover:shadow-2xl transition-shadow duration-300">
                        <img class="w-full h-64 object-cover" src="@book.ImageUrl" alt="@book.Title">
                        <div class="p-4">
                            <h3 class="text-xl font-bold mb-2">@book.Title</h3>
                            <p class="text-gray-600 text-sm">@book.Author</p>
                            <p class="text-gray-600 text-sm">@book.Description</p>
                            <div class="mt-4 flex justify-between items-center">
                                <span class="text-lg font-bold">$@book.Price</span>
                                <a href="#" class="text-blue-500 hover:text-blue-600 transition-colors duration-300">Details</a>
                            </div>
                        </div>
                    </div>
                }
                
            </div>
        </div>
    </section>
</div>