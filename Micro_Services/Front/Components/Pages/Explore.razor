@page "/Explore"

<div class="container mx-auto px-4 py-8">
    <!-- Search Bar and Other Content Here -->
    
    <!-- Books Section -->
    <section class="py-12">
        <h2 class="text-4xl font-semibold text-center text-gray-800 mb-12">Featured Books</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
            @foreach (var book in books)
            {
                <!-- Book Template -->
                <div class="bg-white rounded-lg overflow-hidden shadow-lg hover:shadow-2xl transition-shadow duration-300">
                    <img class="w-full h-64 object-cover" src="@book.ImageUrl" alt="@book.Title">
                    <div class="p-4">
                        <h3 class="text-xl font-bold mb-2">@book.Title</h3>
                        <p class="text-gray-600 text-sm">@book.Author</p>
                        <p class="text-gray-600 text-sm">@book.Description</p>
                        <div class="mt-4 flex justify-between items-center">
                            <span class="text-lg font-bold">$@book.Price</span>
                            <a href="#" class="text-blue-500 hover:text-blue-600 transition-colors duration-300">Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>
</div>
